<h2> Employee All Records </h2>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th> DOB </th>
      <th> Gender </th>
      <th> Email </th>
      <th>Mobile No </th>
      <th> Address </th>
      <th> Country </th>
      <th> Salary </th>
      <th> Social Account </th>
      <th colspan="3"> Actions  </th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td> <%= employee.fName %> </td>
        <td> <%= employee.lName %> </td>
        <td> <%= employee.dob %> </td>
        <td> <%= employee.gender %> </td>
        <td> <%= employee.email %> </td>
        <td> <%= employee.mobile %> </td>
        <td> <%= employee.address %> </td>
        <td> <%= employee.country %> </td>
        <td> <%= employee.salary %> </td>
        <td> <%= employee.socialAccount %> </td>
        <td> <button> <%= link_to 'Show', employee_path(employee.id)%> </button> </td>
        <td>  <button> <%= link_to 'Edit', edit_employee_path(employee.id)%>   </button> </td>
        <td> <%= button_to 'Delete', employee_path(employee.id), method: :delete , data: { confirm: "Are you sure?"} %> </td>
      </tr>
    <% end %>
  </tbody>
</table>


<div style="margin-top: 30px; margin-left: 50px">
  <button> <%= link_to 'Create New Record', new_employee_path %> </button>
</div>